      <xacro:realsense_d435_camera name="camera" parent="head_tilt_link">
          <origin rpy="0 0 0" xyz="0.06705 0.0125 0"/>
      </xacro:realsense_d435_camera>

      <joint name="camera_joint_static" type="fixed">
          <origin rpy="0 0 0" xyz="0.06705 0 -0.00425"/>
          <parent link="head_tilt_link_static"/>
          <child link="camera_link_static"/>
          <axis xyz="0 0 0"/>
      </joint>

      <transmission name="trans_head_pan_joint">
          <type>transmission_interface/SimpleTransmission</type>
          <joint name="head_pan_joint">
              <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
          </joint>
          <actuator name="head_pan_joint_motor">
              <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
              <mechanicalReduction>1</mechanicalReduction>
          </actuator>
      </transmission>
      <transmission name="trans_head_tilt_joint">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="head_tilt_joint">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
            <actuator name="head_tilt_joint_motor">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>
      <gazebo>
            <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
                <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
                <legacyModeNS>true</legacyModeNS>
                <robotNamespace>/doris_head</robotNamespace>
            </plugin>
        </gazebo>
